<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:state_checked="true"
          android:drawable="@drawable/marker_checked_clicked" /> <!-- checked and pressed -->
    <item android:state_pressed="false"
          android:state_checked="true"
          android:drawable="@drawable/marker_checked" /> <!-- checked  -->
    <item android:state_pressed="true"
          android:state_checked="false"
          android:drawable="@drawable/marker_unchecked_clicked" /> <!-- pressed -->
    <item android:state_pressed="false"
          android:state_checked="false"
          android:drawable="@drawable/marker_unchecked" /> <!-- checked and pressed -->
</selector>